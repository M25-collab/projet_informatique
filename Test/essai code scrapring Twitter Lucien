POSITIVE_WORDS = [mot.lower() for mot in [
    "Bons rÃ©sultats", "Croissance", "SuccÃ¨s", "Innovation", "RÃ©volutionnaire", "Expansion", "RentabilitÃ©",
    "Part de marchÃ©", "Leadership", "Nouveau produit", "Collaboration fructueuse", "Forte demande",
